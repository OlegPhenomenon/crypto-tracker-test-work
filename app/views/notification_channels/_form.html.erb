<%= form_with(model: notification_channel, url: notification_channels_path, data: { controller: "channel_form" }, class: "space-y-6") do |form| %>
  <% if notification_channel.errors.any? %>
    <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <strong class="font-bold">Error!</strong>
      <span class="block sm:inline">Please fix the following errors:</span>
      <ul class="list-disc list-inside mt-2">
        <% notification_channel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :type, 'Channel type', class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :type,
          options_for_select([['Select channel type', '']] + channel_type_options, @channel_type),
          {},
          {
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border",
            data: {
              channel_form_target: "select",
              action: "change->channel_form#typeChanged"
            }
          } %>
    </div>

    <div data-channel_form-target="formFrame">
      <% if @channel_type.present? %>
        <%= render partial: "channel_types/#{@channel_type.underscore}_fields",
                   locals: { notification_channel: notification_channel } %>
      <% else %>
        <div class="text-gray-500 text-center py-8">Select channel type for configuration</div>
      <% end %>
    </div>

    <div class="flex items-center justify-between pt-6 border-t">
      <%= form.submit notification_channel.persisted? ? "Update channel" : "Create channel",
          class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200" %>

      <%= link_to "Cancel", notification_channels_path,
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded transition duration-200" %>
    </div>
  </div>
<% end %>