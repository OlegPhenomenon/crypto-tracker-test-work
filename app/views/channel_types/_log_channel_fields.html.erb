<div class="space-y-4">
  <div class="bg-gray-50 rounded-lg p-4">
    <div class="flex items-center mb-2">
      <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-3">
        <%= raw channel_type_icon_svg('log') %>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900">Logging</h3>
        <p class="text-sm text-gray-600">System INFO logging</p>
      </div>
    </div>
  </div>

  <div>
    <%= label_tag "#{notification_channel.class.name.underscore}[title]", "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= text_field_tag "#{notification_channel.class.name.underscore}[title]",
        notification_channel.title,
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border",
        placeholder: "Log Notifications" %>
  </div>
</div>
