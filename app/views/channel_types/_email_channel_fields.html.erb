<div class="space-y-4">
  <div class="bg-blue-50 rounded-lg p-4">
    <div class="flex items-center mb-2">
      <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
        <%= raw channel_type_icon_svg('envelope') %>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900">Email</h3>
        <p class="text-sm text-gray-600">Notifications by email</p>
      </div>
    </div>
  </div>

  <div>
    <%= label_tag "#{notification_channel.class.name.underscore}[title]", "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= text_field_tag "#{notification_channel.class.name.underscore}[title]",
        notification_channel.title,
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border",
        placeholder: "Email Notifications" %>
  </div>

  <div>
    <%= label_tag "#{notification_channel.class.name.underscore}[details][email]", 'Email address *', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= email_field_tag "#{notification_channel.class.name.underscore}[details][email]",
        notification_channel.details['email'],
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border",
        placeholder: "user@example.com",
        required: true %>
  </div>

  <div class="bg-yellow-50 border border-yellow-200 rounded-md p-3">
    <div class="flex">
      <svg class="w-5 h-5 text-yellow-400 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
      <div class="text-sm text-yellow-800">
        <p class="font-medium">Warning!</p>
        <p class="mt-1">SMTP is not configured, so actual email sending will not work.</p>
        <p>This feature is added for demonstration purposes only.</p>
      </div>
    </div>
  </div>
</div>
