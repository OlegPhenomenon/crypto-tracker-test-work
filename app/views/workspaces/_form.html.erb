<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-lg rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Create New Price Alert</h1>
      <p class="mt-1 text-sm text-gray-600">Set up an alert to be notified when your cryptocurrency reaches a specific price.</p>
    </div>

    <%= form_with model: @alert, url: workspaces_path, method: :post, class: "px-6 py-6 space-y-6" do |form| %>
      <% if @alert.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc space-y-1 pl-5">
                  <% @alert.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :exchange, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.select :exchange, 
              options_for_select(Alert.exchanges.map { |key, value| [key.humanize, value] }, @alert.exchange), 
              { prompt: 'Select Exchange' },
              { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
      </div>

      <div>
        <%= form.label :symbol, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.select :symbol,
              options_for_select(Alert.symbols.map { |s| [s, s] }, @alert.symbol),
              { prompt: "Select cryptocurrency symbol" },
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <p class="mt-1 text-xs text-gray-500">Choose from available trading pairs</p>
      </div>

      <div>
        <%= form.label :threshold_price, "Target Price", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          <%= form.number_field :threshold_price, 
              step: 0.00000001, 
              min: 0,
              placeholder: "0.00", 
              class: "block w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <p class="mt-1 text-xs text-gray-500">The price at which you want to be notified</p>
      </div>

      <div>
        <%= form.label :direction, "Alert Direction", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <div class="flex items-center">
            <%= form.radio_button :direction, "up", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
            <%= form.label :direction_up, "Price goes UP (above target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :direction, "down", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
            <%= form.label :direction_down, "Price goes DOWN (below target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
        </div>
      </div>

      <%= form.hidden_field :status, value: "active" %>

      <div>
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-medium text-gray-900">Notification Channels</h3>
            <p class="text-sm text-gray-600">Select channels to receive notifications</p>
          </div>
          <%= link_to "Manage Channels", notification_channels_path, 
              class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
          </div>

        <% if @available_channels.any? %>
          <div class="space-y-3" id="notification-channels">
            <% @available_channels.each do |channel| %>
              <%= render 'workspaces/components/channel_type', channel: channel %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No notification channels</h3>
            <p class="mt-1 text-sm text-gray-500">Create a notification channel first to receive alerts.</p>
            <div class="mt-6">
              <%= link_to "Create Channel", new_notification_channel_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
        <%= link_to "Cancel", workspaces_path, 
            class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit "Create Alert", 
            class: "bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
