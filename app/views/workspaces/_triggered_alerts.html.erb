 <!-- Triggered Alerts Section -->
    <div class="mb-8 bg-white shadow-lg rounded-2xl border border-gray-100">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-red-400 rounded-full mr-3"></span>
          Triggered Alerts
        </h2>
        <p class="mt-1 text-sm text-gray-600">Alerts that have been triggered recently</p>
      </div>
      <div class="p-8">
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-5a7.5 7.5 0 111-14.95M9 7h6"></path>
            </svg>
          </div>
          <% if @alerts.triggered.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
              <% @alerts.triggered.each do |alert| %>
                <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-lg p-4 border border-red-200 hover:shadow-md transition-shadow">
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex items-center space-x-2">
                      <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                        <span class="text-sm font-bold text-red-600">
                          <%= alert.symbol.gsub('USDT', '').first(3) %>
                        </span>
                      </div>
                      <div>
                        <h4 class="font-semibold text-gray-900"><%= alert.symbol %></h4>
                        <p class="text-xs text-gray-500"><%= alert.exchange.capitalize %></p>
                      </div>
                    </div>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      Triggered
                    </span>
                  </div>

                  <div class="space-y-2">
                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Target Price:</span>
                      <span class="text-sm font-semibold text-gray-900">
                        $<%= number_with_precision(alert.threshold_price, precision: 2, delimiter: ',') %>
                      </span>
                    </div>

                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Direction:</span>
                      <span class="text-sm">
                        <% if alert.direction == 'up' %>
                          <span class="text-green-600 font-medium">↑ Above</span>
                        <% else %>
                          <span class="text-red-600 font-medium">↓ Below</span>
                        <% end %>
                      </span>
                    </div>

                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Triggered:</span>
                      <span class="text-xs text-gray-700">
                        <%= alert.updated_at.strftime("%b %d, %H:%M") %>
                      </span>
                    </div>
                  </div>

                  <div class="mt-3 pt-3 border-t border-red-200">
                    <%= link_to alert_path(alert), class: "text-xs text-red-600 hover:text-red-800 font-medium flex items-center" do %>
                      View Details
                      <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Triggered Alerts</h3>
            <p class="text-gray-600">Your triggered alerts will appear here when price targets are reached.</p>
          <% end if @alerts.present? %>
        </div>
      </div>
    </div>