<div class="min-h-screen bg-gray-50 py-8" data-controller="prices">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Live Prices Section -->
    <div class="mb-8 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl shadow-xl border border-blue-100">
      <div class="px-8 py-6 border-b border-blue-200 bg-white rounded-t-2xl">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <span class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></span>
              Live Market Prices
            </h2>
            <p class="mt-1 text-sm text-gray-600">Real-time cryptocurrency prices from Binance</p>
          </div>
          <div class="text-xs text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
            Updated every second
          </div>
        </div>
      </div>
      <div class="p-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% Alert::SYMBOLS.each do |symbol| %>
            <% config = coin_config(symbol) %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 group">
              <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center text-xl font-bold transition-colors
                                <%= case config[:color]
                                    when 'orange' then 'bg-orange-100 text-orange-600 group-hover:bg-orange-200'
                                    when 'blue' then 'bg-blue-100 text-blue-600 group-hover:bg-blue-200'
                                    when 'purple' then 'bg-purple-100 text-purple-600 group-hover:bg-purple-200'
                                    when 'indigo' then 'bg-indigo-100 text-indigo-600 group-hover:bg-indigo-200'
                                    when 'yellow' then 'bg-yellow-100 text-yellow-600 group-hover:bg-yellow-200'
                                    when 'green' then 'bg-green-100 text-green-600 group-hover:bg-green-200'
                                    when 'pink' then 'bg-pink-100 text-pink-600 group-hover:bg-pink-200'
                                    else 'bg-gray-100 text-gray-600 group-hover:bg-gray-200'
                                    end %>">
                      <%= config[:icon] %>
                    </div>
                    <div>
                      <h3 class="font-bold text-gray-900 text-lg"><%= coin_name(symbol) %></h3>
                      <p class="text-xs text-gray-500"><%= config[:name] %></p>
                    </div>
                  </div>
                  <div class="text-xs text-gray-400 bg-gray-50 px-2 py-1 rounded">
                    USDT
                  </div>
                </div>
                
                <div class="space-y-2">
                  <div class="flex items-baseline justify-between">
                    <span class="text-2xl font-bold text-gray-900" id="<%= symbol %>-price">
                      $---.--
                    </span>
                    <span class="text-xs text-gray-500">
                      Loading...
                    </span>
                  </div>
                  
                  <div class="w-full bg-gray-200 rounded-full h-1">
                    <div class="h-1 rounded-full transition-all duration-1000 
                                <%= case config[:color]
                                    when 'orange' then 'bg-orange-500'
                                    when 'blue' then 'bg-blue-500'
                                    when 'purple' then 'bg-purple-500'
                                    when 'indigo' then 'bg-indigo-500'
                                    when 'yellow' then 'bg-yellow-500'
                                    when 'green' then 'bg-green-500'
                                    when 'pink' then 'bg-pink-500'
                                    else 'bg-gray-500'
                                    end %>" 
                         style="width: 0%" id="<%= symbol %>-progress"></div>
                  </div>
                </div>
                
                <div class="mt-4 flex items-center justify-between text-xs">
                  <span class="text-gray-500">24h Change</span>
                  <span class="text-gray-400" id="<%= symbol %>-change">---%</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Triggered Alerts Section -->
    <div class="mb-8 bg-white shadow-lg rounded-2xl border border-gray-100">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-red-400 rounded-full mr-3"></span>
          Triggered Alerts
        </h2>
        <p class="mt-1 text-sm text-gray-600">Alerts that have been triggered recently</p>
      </div>
      <div class="p-8">
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-5a7.5 7.5 0 111-14.95M9 7h6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No Triggered Alerts</h3>
          <p class="text-gray-600">Your triggered alerts will appear here when price targets are reached.</p>
        </div>
      </div>
    </div>

    <!-- Alert Form Section -->
    <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">Create New Price Alert</h1>
        <p class="mt-1 text-sm text-gray-600">Set up an alert to be notified when your cryptocurrency reaches a specific price.</p>
      </div>

      <%= form_with model: @alert, url: workspaces_path, method: :post, local: true, class: "px-6 py-6 space-y-6" do |form| %>
        <% if @alert.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc space-y-1 pl-5">
                    <% @alert.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Exchange Field -->
        <div>
          <%= form.label :exchange, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :exchange, 
                options_for_select(Alert.exchanges.map { |key, value| [key.humanize, value] }, @alert.exchange), 
                { prompt: 'Select Exchange' },
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <!-- Symbol Field -->
        <div>
          <%= form.label :symbol, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :symbol, 
                placeholder: "e.g., BTCUSDT", 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Enter the trading pair symbol (e.g., BTCUSDT, ETHUSDT)</p>
        </div>

        <!-- Threshold Price Field -->
        <div>
          <%= form.label :threshold_price, "Target Price", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :threshold_price, 
                step: 0.00000001, 
                min: 0,
                placeholder: "0.00", 
                class: "block w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">The price at which you want to be notified</p>
        </div>

        <!-- Direction Field -->
        <div>
          <%= form.label :direction, "Alert Direction", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2 space-y-2">
            <div class="flex items-center">
              <%= form.radio_button :direction, "up", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= form.label :direction_up, "Price goes UP (above target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= form.radio_button :direction, "down", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= form.label :direction_down, "Price goes DOWN (below target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </div>

        <!-- Hidden Status Field -->
        <%= form.hidden_field :status, value: "active" %>

        <!-- Notification Channels -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Notification Channels</h3>
          <p class="text-sm text-gray-600 mb-4">Select how you want to be notified when the alert triggers:</p>
          
          <div class="space-y-4">
            <!-- Log Channel -->
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= check_box_tag "notification_channels[LogChannel][selected]", "1", false, 
                    class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= label_tag "notification_channels_LogChannel_selected", "System Log", 
                    class: "font-medium text-gray-700" %>
                <p class="text-gray-500">Log notifications to the application logs (for debugging)</p>
              </div>
            </div>

            <!-- Email Channel -->
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= check_box_tag "notification_channels[EmailChannel][selected]", "1", false, 
                    class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded",
                    id: "email_channel_checkbox" %>
              </div>
              <div class="ml-3 text-sm flex-1">
                <%= label_tag "email_channel_checkbox", "Email Notifications", 
                    class: "font-medium text-gray-700" %>
                <p class="text-gray-500 mb-2">Send notifications to your email address</p>
                
                <div class="email-details" style="display: none;">
                  <%= label_tag "notification_channels_EmailChannel_details_email", "Email Address:", 
                      class: "block text-xs font-medium text-gray-600 mb-1" %>
                  <%= email_field_tag "notification_channels[EmailChannel][details][email]", "", 
                      placeholder: "your@email.com",
                      class: "block w-full px-2 py-1 text-sm border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", workspaces_path, 
              class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Create Alert", 
              class: "bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

<script>
  // Show/hide email field based on checkbox
  document.addEventListener('DOMContentLoaded', function() {
    const emailCheckbox = document.getElementById('email_channel_checkbox');
    const emailDetails = document.querySelector('.email-details');
    
    if (emailCheckbox && emailDetails) {
      emailCheckbox.addEventListener('change', function() {
        emailDetails.style.display = this.checked ? 'block' : 'none';
      });
    }
  });
</script>
