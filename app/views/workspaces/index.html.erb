<div class="min-h-screen bg-gray-50 py-8" data-controller="prices">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Live Prices Section -->
    <div class="mb-8 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl shadow-xl border border-blue-100">
      <div class="px-8 py-6 border-b border-blue-200 bg-white rounded-t-2xl">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <span class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></span>
              Live Market Prices
            </h2>
            <p class="mt-1 text-sm text-gray-600">Real-time cryptocurrency prices from Binance</p>
          </div>
          <div class="text-xs text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
            Updated every second
          </div>
        </div>
      </div>
      <div class="p-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% Alert::SYMBOLS.each do |symbol| %>
            <% config = coin_config(symbol) %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 group">
              <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center text-xl font-bold transition-colors
                                <%= case config[:color]
                                    when 'orange' then 'bg-orange-100 text-orange-600 group-hover:bg-orange-200'
                                    when 'blue' then 'bg-blue-100 text-blue-600 group-hover:bg-blue-200'
                                    when 'purple' then 'bg-purple-100 text-purple-600 group-hover:bg-purple-200'
                                    when 'indigo' then 'bg-indigo-100 text-indigo-600 group-hover:bg-indigo-200'
                                    when 'yellow' then 'bg-yellow-100 text-yellow-600 group-hover:bg-yellow-200'
                                    when 'green' then 'bg-green-100 text-green-600 group-hover:bg-green-200'
                                    when 'pink' then 'bg-pink-100 text-pink-600 group-hover:bg-pink-200'
                                    else 'bg-gray-100 text-gray-600 group-hover:bg-gray-200'
                                    end %>">
                      <%= config[:icon] %>
                    </div>
                    <div>
                      <h3 class="font-bold text-gray-900 text-lg"><%= coin_name(symbol) %></h3>
                      <p class="text-xs text-gray-500"><%= config[:name] %></p>
                    </div>
                  </div>
                  <div class="text-xs text-gray-400 bg-gray-50 px-2 py-1 rounded">
                    USDT
                  </div>
                </div>
                
                <div class="space-y-2">
                  <div class="flex items-baseline justify-between">
                    <span class="text-2xl font-bold text-gray-900" id="<%= symbol %>-price">
                      $---.--
                    </span>
                  </div>
                  
                  <div class="w-full bg-gray-200 rounded-full h-1">
                    <div class="h-1 rounded-full transition-all duration-1000 
                                <%= case config[:color]
                                    when 'orange' then 'bg-orange-500'
                                    when 'blue' then 'bg-blue-500'
                                    when 'purple' then 'bg-purple-500'
                                    when 'indigo' then 'bg-indigo-500'
                                    when 'yellow' then 'bg-yellow-500'
                                    when 'green' then 'bg-green-500'
                                    when 'pink' then 'bg-pink-500'
                                    else 'bg-gray-500'
                                    end %>" 
                         style="width: 0%" id="<%= symbol %>-progress"></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Triggered Alerts Section -->
    <div class="mb-8 bg-white shadow-lg rounded-2xl border border-gray-100">
      <div class="px-8 py-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-red-400 rounded-full mr-3"></span>
          Triggered Alerts
        </h2>
        <p class="mt-1 text-sm text-gray-600">Alerts that have been triggered recently</p>
      </div>
      <div class="p-8">
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-5a7.5 7.5 0 111-14.95M9 7h6"></path>
            </svg>
          </div>
          <% if @alerts.triggered.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
              <% @alerts.triggered.each do |alert| %>
                <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-lg p-4 border border-red-200 hover:shadow-md transition-shadow">
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex items-center space-x-2">
                      <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                        <span class="text-sm font-bold text-red-600">
                          <%= alert.symbol.gsub('USDT', '').first(3) %>
                        </span>
                      </div>
                      <div>
                        <h4 class="font-semibold text-gray-900"><%= alert.symbol %></h4>
                        <p class="text-xs text-gray-500"><%= alert.exchange.capitalize %></p>
                      </div>
                    </div>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      Triggered
                    </span>
                  </div>

                  <div class="space-y-2">
                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Target Price:</span>
                      <span class="text-sm font-semibold text-gray-900">
                        $<%= number_with_precision(alert.threshold_price, precision: 2, delimiter: ',') %>
                      </span>
                    </div>

                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Direction:</span>
                      <span class="text-sm">
                        <% if alert.direction == 'up' %>
                          <span class="text-green-600 font-medium">↑ Above</span>
                        <% else %>
                          <span class="text-red-600 font-medium">↓ Below</span>
                        <% end %>
                      </span>
                    </div>

                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-600">Triggered:</span>
                      <span class="text-xs text-gray-700">
                        <%= alert.updated_at.strftime("%b %d, %H:%M") %>
                      </span>
                    </div>
                  </div>

                  <div class="mt-3 pt-3 border-t border-red-200">
                    <%= link_to alert_path(alert), class: "text-xs text-red-600 hover:text-red-800 font-medium flex items-center" do %>
                      View Details
                      <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Triggered Alerts</h3>
            <p class="text-gray-600">Your triggered alerts will appear here when price targets are reached.</p>
          <% end if @alerts.present? %>
        </div>
      </div>
    </div>

    <!-- Alert Form Section -->
    <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">Create New Price Alert</h1>
        <p class="mt-1 text-sm text-gray-600">Set up an alert to be notified when your cryptocurrency reaches a specific price.</p>
      </div>

      <%= form_with model: @alert, url: workspaces_path, method: :post, local: true, class: "px-6 py-6 space-y-6" do |form| %>
        <% if @alert.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc space-y-1 pl-5">
                    <% @alert.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Exchange Field -->
        <div>
          <%= form.label :exchange, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :exchange, 
                options_for_select(Alert.exchanges.map { |key, value| [key.humanize, value] }, @alert.exchange), 
                { prompt: 'Select Exchange' },
                { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <!-- Symbol Field -->
        <div>
          <%= form.label :symbol, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :symbol, 
                placeholder: "e.g., BTCUSDT", 
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Enter the trading pair symbol (e.g., BTCUSDT, ETHUSDT)</p>
        </div>

        <!-- Threshold Price Field -->
        <div>
          <%= form.label :threshold_price, "Target Price", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :threshold_price, 
                step: 0.00000001, 
                min: 0,
                placeholder: "0.00", 
                class: "block w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">The price at which you want to be notified</p>
        </div>

        <!-- Direction Field -->
        <div>
          <%= form.label :direction, "Alert Direction", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2 space-y-2">
            <div class="flex items-center">
              <%= form.radio_button :direction, "up", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= form.label :direction_up, "Price goes UP (above target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= form.radio_button :direction, "down", class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= form.label :direction_down, "Price goes DOWN (below target)", class: "ml-3 block text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </div>

        <!-- Hidden Status Field -->
        <%= form.hidden_field :status, value: "active" %>

        <!-- Notification Channels -->
        <div>
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Notification Channels</h3>
              <p class="text-sm text-gray-600">Select channels to receive notifications</p>
            </div>
            <%= link_to "Manage Channels", notification_channels_path, 
                class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
            </div>

          <% if @available_channels.any? %>
            <div class="space-y-3" id="notification-channels">
              <% @available_channels.each do |channel| %>
                <div class="relative">
                  <label class="flex items-start p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors">
              <div class="flex items-center h-5">
                      <%= check_box_tag "notification_channel_ids[]", channel.id, false,
                    class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded",
                          id: "channel_#{channel.id}" %>
                    </div>
                    <div class="ml-3 flex-1">
                      <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm <%= channel_icon_color(channel) %>">
                          <%= case channel.type
                              when 'LogChannel' then '📝'
                              when 'EmailChannel' then '✉️'
                              when 'TelegramChannel' then '📱'
                              else '📢'
                              end %>
                        </div>
                        <div>
                          <div class="text-sm font-medium text-gray-900">
                            <%= channel.title %>
                          </div>
                          <div class="text-xs text-gray-500">
                            <%= case channel.type
                                when 'LogChannel' then 'System logs'
                                when 'EmailChannel' then 'Email notifications'
                                when 'TelegramChannel' then 'Telegram messages' end %>
                          </div>
                        </div>
                      </div>
              </div>
                  </label>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No notification channels</h3>
              <p class="mt-1 text-sm text-gray-500">Create a notification channel first to receive alerts.</p>
              <div class="mt-6">
                <%= link_to "Create Channel", new_notification_channel_path, 
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Submit Buttons -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", workspaces_path, 
              class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Create Alert", 
              class: "bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

